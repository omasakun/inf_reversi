{
	"author": "omasakun",
	"license": "MIT",
	"private": true,
	"scripts": {
		"clean": "onerror -t 'Error @ trash' \"trash tmp-js tmp-css docs .sass-cache\"",
		"pug": "onerror -t 'Error @ pug' \"pug src/pug/ --obj src/pug/config.json --out docs/ -s\"",
		"sass": "onerror -t 'Error @ sass' \"node-sass src/sass/index.sass --output tmp-css/ -q --indented-type --output-style expanded --source-map-embed --source-map-contents --source-map-root src/sass\"",
		"css": "onerror -t 'Error @ postcss' \"postcss --config postcss.json tmp-css/index.css -o docs/index.css\"",
		"cssmin": "onerror -t 'Error @ css-min' \"cleancss docs/index.css -o docs/index.min.css -O2\"",
		"js": "onerror -t 'Error @ js-bundle' \"rollup --config rollup.config.js\"",
		"jsmin": "onerror -t 'Error @ js-min' \"google-closure-compiler --js docs/bundle.js --js_output_file docs/bundle.min.js -O WHITESPACE -W VERBOSE --language_in ECMASCRIPT_NEXT --language_out ECMASCRIPT_NEXT --assume_function_wrapper --output_wrapper '(function(){%output%})()'\"",
		"copy": "onerror -t 'Error @ copy' \"cpx src/assets/**/* docs/\"",
		"view": "onerror -t 'Error @ browser-sync' \"browser-sync 'docs/' --no-notify --logLevel info\"",
		"view-reload-1": "browser-sync reload",
		"view-reload-2": "notify -t 'View updated' -m 'Check the browser'",
		"view-reload": "run-p -s view-reload-*",
		"build:html": "chokidar src/pug/ --debounce 200 --silent --initial -c 'run-s pug view-reload'",
		"build:css": "chokidar src/sass/ --debounce 200 --silent --initial -c 'run-s sass css cssmin view-reload'",
		"build:js": "chokidar tmp-js/ --debounce 200 --silent --initial -c 'run-s js jsmin view-reload'",
		"build:assets": "chokidar src/assets/ --debounce 200 --silent --initial -c 'run-s copy view-reload'",
		"build:view": "run-s -s view",
		"build": "run-p -cls build:*",
		"build-tsc": "tsc -w"
	},
	"devDependencies": {
		"autoprefixer": "^9.5.1",
		"browser-sync": "^2.26.7",
		"chokidar-cli": "^1.2.2",
		"clean-css-cli": "^4.3.0",
		"cli-error-notifier": "^2.1.0",
		"cpx": "^1.5.0",
		"google-closure-compiler": "^20190513.0.0",
		"jstransformer-markdown-it": "^2.1.0",
		"node-notifier-cli": "^1.1.2",
		"node-sass": "^4.12.0",
		"npm-run-all": "^4.1.5",
		"postcss-cli": "^6.1.2",
		"pug-cli": "^1.0.0-alpha6",
		"rollup": "^1.12.5",
		"rollup-plugin-commonjs": "^10.0.0",
		"rollup-plugin-includepaths": "^0.2.3",
		"rollup-plugin-node-resolve": "^5.0.0",
		"rollup-plugin-sourcemaps": "^0.4.2",
		"trash-cli": "^3.0.0",
		"typescript": "^3.5.1"
	}
}